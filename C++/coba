            getgenv().playerDropdown2:Set({selectedPlayerName2})
        else
            selectedPlayerName2 = nil
            -- Jangan set apapun jika kosong
            getgenv().playerDropdown2:Set({"<None>"}) -- atau string dummy lain, hindari nil
        end
    end
})

