    Name = "Jumlah Batu",
    PlaceholderText = "Masukkan angka",
    RemoveTextAfterFocusLost = false,
    Callback = function(Value)
        local num = tonumber(Value)
        if num then
            getgenv().loopCount = num
            print("Jumlah loop di-set ke:", loopCount)
        else
            warn("Input bukan angka")
        end
    end
})

